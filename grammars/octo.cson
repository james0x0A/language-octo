fileTypes: [
  "o8", "8o", "oct", "octo"
]
name: "Octo"
patterns: [
    { include: "#code" }
]
repository:
    code:
        patterns: [
          { include: "#numbers" },
          { include: "#comments" },
          { include: "#keywords" },
          { include: "#labels" }
          { include: "#macros"}
        ]
    comments:
        begin: "#"
        end: "$\\n?"
        name: "comment.line.octo"

    labels:
        patterns:
            [
                {
                    begin: "(?<=^|\\s)(\:(\\s)+)"
                    end: "(?=\\s|#)"
                    name: "meta.function.octo"
                    patterns:
                        [
                            match:"((\\w|.)+?)"
                            name: "entity.name.function.octo"
                        ]
                }
            ]
    macros:
        patterns:
            [
                {
                    begin: "(?<=^|\\s)(\:)"
                    end: "(?=\\s)"
                    name: "meta.macro.octo"
                    patterns:
                        [
                            {
                                match: "(alias|const|next)"
                                name: "storage.modifier.octo"
                            },
                            {
                                match: "(unpack)"
                                name: "support.function.octo"
                            }
                            {
                                match: "(breakpoint)"
                                name: "support.other.octo"
                            }
                        ]
                }
            ]
    numbers:
        patterns:
            [
                {
                    #^|\t|
                    match: "(?<=^|\\s)(\\+|-)?((0(x|X)[0-9a-fA-F]+)|(0(b|B)[01]+)|(0(o|O)[0-7]+)|([0-9]+(\\.[0-9]+)?))(?=\\s)"
                    #\t| |$
                    name: "constant.numeric.octo"
                }
            ]
    keywords:
        patterns:
            [
                {
                    match: "(?<=^|\\s)(if|else|while|then|begin|end|loop|again)(?=\\s)"
                    name: "keyword.control.octo"
                },
                {
                    #CHIP-8
                    match: "(?<=^|\\s)(sprite|save|load|clear|hex|bcd|random|return|;|jump|jump0)(?=\\s)"
                    name: "keyword.other.octo"
                },
                {
                    #SuperChip
                    match: "(?<=^|\\s)(hires|lores|scroll-down|scroll-left|scroll-right|bighex|exit|saveflags|loadflags)(?=\\s)"
                    name: "keyword.other.octo"
                },
                {
                    #XO-Chip
                    match: "(?<=^|\\s)(long|plane|scroll-up)(?=\\s)"
                    name: "keyword.other.octo"
                },
                {
                    match: "(?<=^|\\s)(i|v[0-9A-Fa-f]|delay|buzzer)(?=\\s)"
                    name: "variable.language.octo"
                },
                {
                    match: "(?<=^|\\s)(\\:=|==|\\+=|!=|\\^=|-=|=-|&=|\\|=|>>=|<<=|key|-key)(?=\\s)"
                    name: "keyword.operator.octo"
                }
            ]

scopeName: "source.octo"
